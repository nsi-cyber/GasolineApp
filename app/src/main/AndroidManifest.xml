<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gasolineprices">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logoonrw"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logoonrw_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GasolinePrices">

        <activity
            android:name=".Splash"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.GasolinePrices.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.GasolinePrices.NoActionBar"
            android:exported="true"/>
        <activity android:name=".MainActivity2"
            android:theme="@style/Theme.GasolinePrices.NoActionBar"/>
        <activity android:name=".MainActivity3"
            android:theme="@style/Theme.GasolinePrices.NoActionBar"/>
        <activity android:name=".ActivityLogin"
            android:theme="@style/Theme.GasolinePrices.NoActionBar"/>
        <activity android:name=".ActivitySignup"
            android:theme="@style/Theme.GasolinePrices.NoActionBar"/>
        <activity android:name=".PastPayments"
            android:theme="@style/Theme.GasolinePrices.NoActionBar"/>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>